<div class="edit-form">

  <% @admin.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>

  <div class="row">
    <div class="large-12 large-centered columns">
      <h1 class="centered-text admin-welcome">Edit Details</h1>
    </div>
  </div>

  <div class="row">
    <div class="large-12 large-centered columns">
      <%= form_for(@admin, url: admin_path, html: {method: "patch"}) do |f| %>
        <%= f.label "full_name", class: "form-label" %>
        <%= f.text_field "full_name" %>
        <%= f.label "user_name", class: "form-label" %>
        <%= f.text_field "user_name" %>
        <%= f.label "email", class: "form-label" %>
        <%= f.text_field "email" %>
        <%= f.label "password", class: "form-label" %>
        <%= f.password_field "password" %>
        <%= f.label "password_confirmation", class: "form-label" %>
        <%= f.password_field "password_confirmation" %>
        <%= f.submit "Edit", class: "button round small" %>
      <% end %>
    </div>
  </div>
</div>
