<% @category.errors.full_messages.each do |message| %>
  <%= message %>
<% end %>

<div class="row">
  <div class="large-12 large-centered columns">
    <h1 class="centered-text">All Categories</h1>
  </div>
</div>

<div class="row">
  <div class="large-4 columns centered-text">
    <%= form_for([:admin, @category]) do |f| %>
      <%= f.label "name" %>
      <%= f.text_field "name", :class => ""  %>
      <%= f.submit "Create Category", :class => "button round tiny" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="large-12 centered columns">
    <ul class="categories">
      <% @categories.each do |category| %>
        <li><%= category.name %></li>
      <% end %>
    </ul>
  </div>
</div>
