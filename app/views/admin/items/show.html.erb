<div class="whole-categories">
  <div class="row">
    <div class="large-12 columns centered-text categories">
      <h1><%= @item.title %></h1>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns centered-text categories">
      <p><% @item.categories.each do |category| %>
          <%= category.name %>
        <% end %></p>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns large-centered categories image-show">
      <p><%= image_tag @item.image.url %></p>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns centered-text categories">
      <p><%= number_to_currency(@item.price, unit: "$") %></p>
      <p><%= @item.description %></p>
      <% if @item.status == "retired" %>
        <p>This item has been retired</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div id="nav_links" class="large-12 columns centered-text">
      <h4><%= link_to "Edit", edit_admin_item_path(@item) %></h4>
    </div>
  </div>
</div>
