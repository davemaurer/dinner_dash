<div class="row">
  <div class="large-12 columns centered-text categories">
    <h1><%= @item.title %></h1>
  </div>
</div>

<div class="row">
  <div class="large-12 columns centered-text categories">
    <ul>
      <% @item.categories.each do |category| %>
        <li><%= category.name %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="large-12 columns large-centered categories image-show">
    <p><%= image_tag @item.image.url %></p>
  </div>
</div>

<div class="row">
  <div class="large-12 columns centered-text categories">
    <h2><%= number_to_currency(@item.price, unit: "$") %></h2>
    <h4><%= @item.description %></h4>
    <% if @item.status == "retired" %>
      <h4>This item has been retired</h4>
    <% end %>
  </div>
</div>

<div class="row">
  <div id="nav_links" class="large-12 columns centered-text">
    <h4><%= link_to "<< Back", admin_items_path %> | <%= link_to "Edit >>", edit_admin_item_path(@item) %></h4>
  </div>
</div>
