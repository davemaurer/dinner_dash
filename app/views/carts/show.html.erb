
<div class="row">
  <div class="large-12 columns centered-text">
  <h1>Shopping Cart</h1>
    
    <%= button_to "Checkout", "#", class: "round button tiny" %>

    <% @cart.item_quantities.each do |k, v| %>
      <%= k.title %> ($<%= k.price %>) x <%= v %>..........$<%= k.price*v %><br>
      <%= button_to "Delete", cart_path(item_id: k.id), method: :delete, class: "button round tiny" %>
    <% end %>
  </div>
</div>
