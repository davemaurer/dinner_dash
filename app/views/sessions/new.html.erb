<div class="row">
  <div class="large-12 large-centered columns">
    <h1 class="centered-text">Log In</h1>
  </div>
</div>

<div class="row">
  <div class="large-4 large-centered text-center columns">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :user_name, "Username" %>
      <%= f.text_field :user_name %> <br>

      <%= f.label :password %>
      <%= f.password_field :password %> <br>

      <%= f.submit "Login", class: "round button medium" %>
    <% end %>
  </div>
</div>
