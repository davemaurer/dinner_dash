        <ul class="right">
          <li><%= link_to image_tag("backpack_icon.png", width: 25), cart_path, class: "active" %></li>
          <li><%= link_to "(#{@cart.count_all})", cart_path %></li>
        </ul>

        <!-- Left Nav Section -->
        <ul class="left">
          <li><%= link_to "Shop", items_path %></li>
          <li><a href="#">Login</a></li>
          <li><a href="#">Sign Up</a></li>
        </ul>
      </section>
    </nav>
    
    <%= yield %>
  
  </body>
