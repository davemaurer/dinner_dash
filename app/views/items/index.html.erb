<div class="row">
  <div class="large-12 large-centered columns">
    <h1 class="centered-text">Mythical Eatures</h1>
  </div>
</div>

<div class="row">
  <div class="large-12 columns centered-text">
    <h3 class="large-12 columns filter">Choose your food quest:
      <button href="#" data-dropdown="drop1" aria-controls="drop1" aria-expanded="false" class="button dropdown">Onward!</button><br>
      <ul id="drop1" data-dropdown-content class="f-dropdown" aria-hidden="true">
        <% @categories.each do |category|%>
          <li><%= link_to category.name, items_path(category_id: category), method: :post %></li>
        <% end %>
      </ul>
    </h3>
  </div>
</div>

<% @items.each_slice(4) do |slice| %>
  <div class="row items">
    <% slice.each do |item| %>
      <div class="large-3 columns">
        <p>
          <%= item.title %>: $<%= item.price %>
          <%= button_to "Add To Cart", cart_path(item_id: item.id), class: "round button tiny" %>
        </p>
      </div>
    <% end %>
  </div>
<% end %>
